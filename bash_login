#!/usr/bin/bash

PS1='\u@\h:\W$(__git_ps1 " (%s)")$ '
export EDITOR=vim

# Environment #############################
MYSQL="/usr/local/mysql/bin"
PGSQL="/usr/local/pgsql/bin"

export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home
export GOBIN="~/Projects/golang/bin"
export PATH="~/bin:$PATH:/usr/local/sbin:$MYSQL:$PGSQL:$GOBIN"
export CLICOLOR=true
export LSCOLORS="exfxcxdxbxegedabagacad"

# Git Settings #############################
export GITHUB="git@github.com"

# Command Aliases ##########################
alias firefox=/Applications/Firefox.app/Contents/MacOS/firefox-bin
alias preview="open -a preview"
alias dotfiles="cd ~/.dotfiles"
alias gr=gitroot
alias r=rails
alias tmr="tmux attach-session"

function gitroot {
  cd $(git rev-parse --show-toplevel)
}

# Include secured settings file
source ~/.dotfiles/secure/env.sh
source ~/.dotfiles/git/git-completion.bash

# RVM - Ruby Version Manager
[[ -s $HOME/.rvm/scripts/rvm ]] && source $HOME/.rvm/scripts/rvm

# End of file stuff that's always here
test -r /sw/bin/init.sh && . /sw/bin/init.sh
